<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paises">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/idCardViewfrance"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#FF69B4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="190dp"
                android:layout_height="182dp"
                android:layout_gravity="left"
                android:src="@drawable/france" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="France"
                android:textColor="#F0F8FF"
                android:textSize="35dp"
                android:textStyle="italic" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginVertical="50dp"
            android:layout_marginLeft="190dp"
            android:text="Paris"
            android:textColor="#F0F8FF"
            android:textSize="25dp"
            android:textStyle="italic" />

    </com.google.android.material.card.MaterialCardView>






    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="205dp"
        android:id="@+id/idCardViewUsa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#008000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="190dp"
                android:layout_height="182dp"
                android:layout_gravity="left"
                android:src="@drawable/rj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rio de Janeiro"
                android:textColor="#F0F8FF"
                android:textSize="35dp"
                android:textStyle="italic" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginVertical="50dp"
            android:layout_marginLeft="190dp"
            android:text="Brasil"
            android:textColor="#F0F8FF"
            android:textSize="25dp"
            android:textStyle="italic" />

    </com.google.android.material.card.MaterialCardView>





    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="410dp"
        android:id="@+id/idCardViewEngland"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#E8D5B3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="190dp"
                android:layout_height="182dp"
                android:layout_gravity="left"
                android:src="@drawable/coliseu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Roma"
                android:textColor="#F0F8FF"
                android:textSize="35dp"
                android:textStyle="italic" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginVertical="50dp"
            android:layout_marginLeft="190dp"
            android:text="Italia"
            android:textColor="#F0F8FF"
            android:textSize="25dp"
            android:textStyle="italic" />

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>